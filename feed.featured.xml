<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ site.title | xml_escape }} - Most recent 5 featured articles</title>
        <description>Most recent 5 articles categorized as 'Featured'</description>
        <link>{{ site.url }}</link>
        <atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
        <lastBuildDate>{% for post in site.categories.featured limit:1 %}{{ post.date | date_to_rfc822 }}{% endfor %}</lastBuildDate>
        {% for post in site.categories.featured %}
        {%- if post.url == "/posts/tesla-part-vi-is-musk-truskworthy-or-will-investors-be-gored-in-the-latest-running-of-the-bulls/"
        or post.url == "/posts/kraft-heinz-warren-buffets-dunkirk/"
        or post.url == "/posts/watchdog-concerns-target/" -%}
        <item>
            <title>{{ post.title | xml_escape }}</title>
            <description>{{ post.excerpt | xml_escape }}</description>
            <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
            <link>{{ site.url }}{{ post.url }}</link>
            {%- if post.image -%}
            <enclosure url="{{ site.url }}{{ post.image }}" length="100000" type="image/jpeg" />
            {%- endif -%}
            <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
        </item>
        {%- endif -%}

        {% endfor %}
    </channel>
</rss>

